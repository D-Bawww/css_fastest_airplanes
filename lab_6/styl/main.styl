body
   background-color rgb(202, 201, 201)
   margin 0
   color black
   font-size 16px
   font-family Arial
   box-sizing border-box 
footer
   display flex
   flex-direction columns 
   background-color black
   margin 0
   color white
   font-size 16px
   font-family Arial
   box-sizing border-box
   p
      margin 20px auto 
.logo
   display flex
   width 20%
   margin auto
   img
      width 100%
      height 100%
.content-container
  background-color rgb(250, 250, 250)
  width 75%
  margin 30px auto
  padding 10px 0
  box-sizing border-box
h2
   margin 15px 10px
h3
   margin 15px 10px
h4
   margin 15px 10px
ul
   margin 15px 10px
   font-size 20px
p
   text-indent 20px
   margin 15px 10px
   font-size 20px
.images_block
   display flex
   flex-direction row
   width 100%
   text-align center
   margin 15px 0
   &-item
      width 33.33%
   img
      width 95%
.filters
   overflow-x scroll
   padding 20px
   td
      line-height 2em

.table
   padding 0 20px 20px 20px
   overflow-x scroll
   table
      border-collapse collapse

.table table,
.table th,
.table td,
.table tr
   border 0.5px #7E7F83 solid
   padding 5px

.fields
   display flex
   align-items center
   padding 0.2em
   max-width 500px
label
	display inline-block
.sort 
   p
	   margin 0.5em 0 0.5em 1em
      font-size 5px
input[type="text"]
  width: 50%;
@media(max-width: 725px)
   body
      font-size 14px
      width 100%
      min-width 300px
      align-items center
   .images_block
      flex-direction column
      align-items center
      &-item
         width 100%
         padding 10px
   .table tr
	   font-size:0.75em 
   input [type=text]
	   width 50px
@import menu
@import gallary