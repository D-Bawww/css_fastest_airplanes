.first-block
  display flex
  flex-direction row
  width 100%
  text-align center
  margin auto
  &-item
    display flex
    flex-direction column
    width 33.33%
    text-align center
    margin 5px 0
    &-item
      p
        margin 2px
      img
        width 95%
      width 100%
      color black
@media(max-width:725px)
  .first-block
    flex-direction column
    align-items center
    &-item
      width 100%
      padding 10px